{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "dist",

  "rewrites": [
    {
      "source": "/api/classes/([^/]+)",
      "destination": "/api/classes/[id]?id=$1"
    },
    {
      "source": "/api/user/classes",
      "destination": "/api/user/classes"
    },
    {
      "source": "/api/admin/assign-class",
      "destination": "/api/admin/assign-class"
    },
    {
      "source": "/api/admin/remove-class",
      "destination": "/api/admin/remove-class"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "JWT_SECRET": "sai-kalpataru-jwt-secret-2024-vercel-production"
  },
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
}
